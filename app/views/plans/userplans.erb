








<h1>Welcome, <%= User.username %></h1>
<h2><%= @plan.instructions %></h2>
<img src="<%= @plan.image %>" alt="plan">

<form action="/plans/<%= @plan.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <% if @plan.user == current_user %>
        <button type="submit">Delete Plan</button>
    <% end %>